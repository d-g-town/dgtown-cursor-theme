{
	"$schema": "vscode://schemas/color-theme",
	"type": "dark",
	"colors": {
		// Main editor area
		"editor.background": "#1e2022",
		"editor.foreground": "#d4d4d4",
		"editor.lineHighlightBackground": "#2a2d2e",
		"editor.selectionBackground": "#264f78",
		"editorCursor.foreground": "#aeafad",
		"editorGutter.background": "#1e2022",
		"editorLineNumber.foreground": "#858585",
		"editorLineNumber.activeForeground": "#c6c6c6",
		"editorIndentGuide.background": "#404040",
		"editorIndentGuide.activeBackground": "#707070",

		// Activity bar (leftmost vertical bar with icons)
		"activityBar.background": "#181818",

		// Side bar (file explorer, search, etc.)
		"sideBar.background": "#252526",
		"sideBarTitle.foreground": "#bbbbbb",
		"sideBarSectionHeader.background": "#252526",

		// Status bar (bottom bar with info)
		"statusBar.background": "#121212",
		"statusBar.foreground": "#bcbec4",

		// Title bar (top window bar)
		"titleBar.activeBackground": "#121212",
		"titleBar.activeForeground": "#bcbec4",

		// Tabs
		"tab.inactiveBackground": "#252526",
		"tab.activeBackground": "#1e2022",
		"tab.activeForeground": "#bcbec4",
		"editorGroupHeader.tabsBackground": "#181818",

		// Input controls
		"dropdown.background": "#181818",
		"input.background": "#181818",

		// Editor widgets and popups
		"debugToolBar.background": "#252526",
		"editorHoverWidget.background": "#252526",
		"editorHoverWidget.border": "#454545",
		"editorWidget.background": "#252526",

		// Editor groups
		"editorGroup.border": "#444444",
		"editorGroup.dropBackground": "#53535399",

		// Lists (file explorer, search results, etc.)
		"list.activeSelectionBackground": "#094771",
		"list.hoverBackground": "#2a2d2e",
		"list.inactiveSelectionBackground": "#37373d",
		"list.highlightForeground": "#0097fb",

		// Peek view (inline code reference viewer)
		"peekViewResult.background": "#252526",
		"peekViewEditor.background": "#262626",

		// Badges (notification counts, etc.)
		"badge.background": "#4d4d4d",
		"badge.foreground": "#bcbec4",

		// Terminal
		"terminal.background": "#1e2022",
		"terminal.foreground": "#d4d4d4"
	},
	"tokenColors": [
		// ========== GENERAL SYNTAX HIGHLIGHTING ==========
		// Embedded code
		{
			"scope": [
				"meta.embedded",
				"source.groovy.embedded"
			],
			"settings": {
				"foreground": "#d4d4d4"
			}
		},
		
		// Comments
		{
			"scope": "comment",
			"settings": {
				"foreground": "#a0a0a0"
			}
		},
		
		// Strings
		{
			"scope": "string",
			"settings": {
				"foreground": "#6aab73"
			}
		},
		
		// Keywords and storage
		{
			"scope": ["keyword", "storage.type", "storage.modifier"],
			"settings": {
				"foreground": "#ff8c00"
			}
		},
		
		// Variables
		{
			"scope": "variable",
			"settings": {
				"foreground": "#bcbec4"
			}
		},
		
		// Constants
		{
			"scope": "constant.numeric",
			"settings": {
				"foreground": "#b5cea8"
			}
		},
		{
			"scope": "constant.language",
			"settings": {
				"foreground": "#569cd6"
			}
		},
		
		// Functions, types and classes
		{
			"scope": "entity.name.function",
			"settings": {
				"foreground": "#6faebd"
			}
		},
		{
			"scope": "entity.name.type",
			"settings": {
				"foreground": "#4ec9b0"
			}
		},
		{
			"scope": "entity.name.class",
			"settings": {
				"foreground": "#4ec9b0"
			}
		},
		{
			"scope": "support.function",
			"settings": {
				"foreground": "#a67f59"
			}
		},
		
		// Attributes and errors
		{
			"scope": "entity.other.attribute-name",
			"settings": {
				"foreground": "#9cdcfe"
			}
		},
		{
			"scope": "invalid",
			"settings": {
				"foreground": "#f44747"
			}
		},

		// ========== GO-SPECIFIC SYNTAX HIGHLIGHTING ==========
		// Keywords and operators
		{
			"scope": ["keyword.control.go", "keyword.go"],
			"settings": {
				"foreground": "#cf8e6d"
			}
		},
		{
			"scope": "keyword.operator.go",
			"settings": {
				"foreground": "#d4d4d4"
			}
		},
		
		// Variables and parameters
		{
			"scope": "variable.other.go",
			"settings": {
				"foreground": "#bcbec4"
			}
		},
		{
			"scope": "variable.parameter.go",
			"settings": {
				"foreground": "#bcbec4"
			}
		},
		
		// Functions and function calls
		{
			"scope": "entity.name.function.go",
			"settings": {
				"foreground": "#56a8f5"
			}
		},
		{
			"scope": "support.function.go",
			"settings": {
				"foreground": "#a67f59"
			}
		},
		{
			"scope": "meta.function-call.go",
			"settings": {
				"foreground": "#a67f59"
			}
		},
		
		// Strings, constants and literals
		{
			"scope": "string.quoted.double.go",
			"settings": {
				"foreground": "#6aab73"
			}
		},
		{
			"scope": "constant.other.rune.go",
			"settings": {
				"foreground": "#d7ba7d"
			}
		},
		{
			"scope": "constant.language.go",
			"settings": {
				"foreground": "#569cd6"
			}
		},
		
		// Types and packages
		{
			"scope": "entity.name.package.go",
			"settings": {
				"foreground": "#b8bb26"
			}
		},
		{
			"scope": "entity.name.type.go",
			"settings": {
				"foreground": "#6faebd"
			}
		},
		{
			"scope": "support.type.builtin.go",
			"settings": {
				"foreground": "#cf8e6d"
			}
		},
		{
			"scope": "support.type.package.go",
			"settings": {
				"foreground": "#b8bb26"
			}
		},
		
		// Comments
		{
			"scope": "comment.line.double-slash.go",
			"settings": {
				"foreground": "#7a7e85"
			}
		}
	]
}